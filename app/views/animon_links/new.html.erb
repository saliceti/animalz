<p class="text-center text-2xl">Add link to <%= @animon.taxon.common_name %></p>

<%= form_with model: @animon_link, local: true, class: "m-2" do |form| %>
  <% if @animon_link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animon_link.errors.count, "error") %> prohibited this link from being saved:</h2>
      <ul>
      <% @animon_link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :animon_id, :value => @animon_link.animon.id %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "border w-64" %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, class: "border w-64" %>
  </div>

  <div class="mt-4">
    <%= form.submit %>
  </div>
<% end %>
