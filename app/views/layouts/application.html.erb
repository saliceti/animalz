    <div class="menu">
      <%= link_to 'Home', root_path %>
      <%= link_to 'Anidex', browse_index_path %>
      <%= link_to 'New', new_taxon_path %>
      <%= link_to 'Help', help_index_path %>
    </div>

    <hr>
    <%= yield %>
  </body>
</html>
