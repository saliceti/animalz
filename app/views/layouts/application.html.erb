<!DOCTYPE html>
<html>
  <head>
    <title>Animalz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
    <%= link_to image_tag('fox_logo.png', class: 'logo'), root_path %>
