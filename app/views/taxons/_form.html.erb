<%= form_with model: taxon do |form| %>

  <div class="field">
    <%= form.label :common_name %>
    <%= form.text_field :common_name %>
  </div>

  <div class="field">
    <%= form.label :scientific_name %>
    <%= form.text_field :scientific_name %>
  </div>

  <div class="field">
    <%= form.label :rank %>
    <%= form.select(:rank, Taxon::RANKS, :include_blank => "") %>
  </div>

  <div class="field">
    <%= form.label :parent_id %>
    <%= parent_taxon(form) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
